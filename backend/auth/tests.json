        "action": "register",
        "email": "newuser@test.com",
        "password": "testpass123",
        "name": "Test User"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string"
      },
      "bodyMatcher": "partial"
